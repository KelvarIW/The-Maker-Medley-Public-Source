if (selectedRow != -1){
    draw_set_alpha(0.45 + 0.225*sin((global.countPersistent mod 75)/75 * 2*pi));
    draw_rectangle(menuLeft, menuTop + (rowHeight*selectedRow), _backRectRight, (menuTop + (rowHeight*selectedRow)) + (rowHeight-1), false);
