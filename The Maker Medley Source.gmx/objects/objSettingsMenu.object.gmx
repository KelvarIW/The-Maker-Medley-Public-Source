                draw_sprite(sprMakerSettingsCheckbox, 0, optionTextX, _rowMiddle+(rowHeight*i) - 2);
            }else if (option[menu, i] == -4){ //slider
                //do nothing
            }else{ //menu-specific
                if (menu == 0 &amp;&amp; i == 5){
                    if (global.vineMode == 1)
                        t_text = "Combined";
                    else if (global.vineMode == 2)
                        t_text = "Arrows + Hold Jump";
